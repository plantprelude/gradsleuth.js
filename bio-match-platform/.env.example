# API Keys
NCBI_API_KEY=your_ncbi_api_key_here
NIH_REPORTER_API_KEY=optional_nih_reporter_key

# Database Configuration
DATABASE_URL=postgresql://biomatch:biomatch@localhost:5432/biomatch
REDIS_URL=redis://localhost:6379
REDIS_DB=0

# Caching
CACHE_TTL_DAYS=7
CACHE_BACKEND=redis
MAX_CACHE_SIZE_MB=512

# Scraping Configuration
SCRAPER_USER_AGENT=BiologyMatchBot/1.0 (Academic Research)
SCRAPER_DELAY=2
CONCURRENT_REQUESTS=2

# Rate Limits
PUBMED_RATE_LIMIT=10
NIH_RATE_LIMIT=100
GLOBAL_RATE_LIMIT=100

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/app.log
JSON_LOGGING=false

# Performance
MAX_WORKERS=4

# Application Settings
DEBUG=false
TESTING=false
